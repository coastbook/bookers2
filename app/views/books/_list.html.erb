<div class="col-md-3">


<!-- ユーザーの詳細 -->
<h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  
  <table class="table">
    <h3>name</h3>
      <%= user.name %>
    <h3>introduction</h3>
      <%= user.introduction %>
   </table>
   
  <div class="row">
  <P>
    <%= link_to edit_user_path(user), class: "nav-link text-light" do %>
      <i class="fas fa-user-cog" style="color: gray;"></i>
    <% end %>
  </p>
  </div>

<!--New book-->
<h2 class="mt-3">New book</h2>
<%= form_with model: book, url: '/books', method: :post do |f| %>
  <div class="form-group">
    <h4>Title</h4>
      <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <h4>Opiniton</h4>
      <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

</div>